{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "lib": ["ESNext"],
      "noImplicitAny": true,
      "moduleResolution": "node", 
      "module": "esNext",
      "esModuleInterop": true,
      "target": "ES2021",
      "allowJs": true,
      "resolveJsonModule": true
    },
    "baseUrl": ".",
    "paths": {
        "@modules/*": ["./src/models/*"],
        "@services/*": ["./src/services/*"]
    },
    "ts-node": {
      "esm": true
    },
    "exclude":["node_modules"]
}